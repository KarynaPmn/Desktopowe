<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350">
    <Grid> 
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Width="50px" Text="Imię: " />
                <TextBox x:Name="tb_name" Width="200px" Margin="10 0 0 0" HorizontalAlignment="Right"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Width="50px" Text="Nazwisko: " />
                <TextBox x:Name="tb_surname" Width="200px" Margin="10 0 0 0" HorizontalAlignment="Right"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Width="50px" Text="Hobby: " />
                <TextBox x:Name="tb_hobby" Width="200px" Margin="10 0 0 20"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10" HorizontalAlignment="Center">
                <Button Content="Poprzedni" Margin="0 0 30 0" Padding="5"/>
                <Button Content="Następny" Padding="5" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
