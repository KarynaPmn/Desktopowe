<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="True">
            <Button DockPanel.Dock="Top" Content="Top" Height="100" />
            <Button DockPanel.Dock="Left" Content="Left" Width="100" />
            <Button DockPanel.Dock="Right" Content="Right" Width="100" />
            <Button DockPanel.Dock="Bottom" Content="Bottom" Height="100" />
            <Button Content="Center" Height="100" />
        </DockPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Button Content="B1" Width="100" HorizontalAlignment="Left"/>
            <Button Content="B2" Width="100" />
            <Button Content="B3" Width="100" HorizontalAlignment="Right"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
            <Button Content="B1" Width="100" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
