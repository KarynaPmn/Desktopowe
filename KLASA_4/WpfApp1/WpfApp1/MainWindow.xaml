<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Vertical" DockPanel.Dock="Left" Width="100">
                <Button Content="i1" Height="50" Width="50" Margin="0, 0, 0, 10"/>
                <Button Content="i2" Height="50" Width="50" Margin="0, 0, 0, 10"/>
                <Button Content="i3" Height="50" Width="50" Margin="0, 0, 0, 10"/>
                <Button Content="i4" Height="50" Width="50" Margin="0, 0, 0, 10"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <RichTextBox Height="200" Width="300" />

                <TextBlock Text="Wynik" />

                <TabPanel>
                    <TabItem Header="Element1" />
                    <TabItem Header="Element1" />
                    <TabItem Header="Element1" />
                </TabPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical" DockPanel.Dock="Right">
                <TextBlock Text="Tods" HorizontalAlignment="Center"/>
                
                <Grid Width="150" Height="150">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" Grid.ColumnSpan="4" Text="Wybór"/>

                    <Button Content="1" Grid.Column="0" Grid.Row="1" Margin="5" />
                    <Button Content="1" Grid.Column="0" Grid.Row="2" Margin="5" />
                    <Button Content="1" Grid.Column="0" Grid.Row="3" Margin="5" />
                    <Button Content="1" Grid.Column="0" Grid.Row="4" Margin="5" />

                    <Button Content="1" Grid.Column="1" Grid.Row="1" Margin="5" />
                    <Button Content="1" Grid.Column="1" Grid.Row="2" Margin="5" />
                    <Button Content="1" Grid.Column="1" Grid.Row="3" Margin="5" />
                    <Button Content="1" Grid.Column="1" Grid.Row="4" Margin="5" />

                    <Button Content="1" Grid.Column="2" Grid.Row="1" Margin="5" />
                    <Button Content="1" Grid.Column="2" Grid.Row="2" Margin="5" />
                    <Button Content="1" Grid.Column="2" Grid.Row="3" Margin="5" />
                    <Button Content="1" Grid.Column="2" Grid.Row="4" Margin="5" />

                    <Button Content="1" Grid.Column="4" Grid.Row="1" Margin="5" />
                    <Button Content="1" Grid.Column="4" Grid.Row="2" Margin="5" />
                    <Button Content="1" Grid.Column="4" Grid.Row="3" Margin="5" />
                    <Button Content="1" Grid.Column="4" Grid.Row="4" Margin="5" />
                </Grid>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
